<% if flash.any? %>
  <% flash.each do |type, msg| %>
    <% if type === "alert" || type === "error" %>
      <%= render_toast header: "#{type} status:", description: "#{msg}", variant: :destructive %>
    <% else %>
      <%= render_toast header: "#{type} status:", description: "#{msg}", class: "border border-blue-600" %>
    <% end %>
  <% end %>
<% end %>
