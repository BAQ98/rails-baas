<%= render_dialog do %>
  <%= dialog_trigger do %>
    <%= render_button("Edit", variant: :secondary) %>
  <% end %>

  <%= dialog_content do %>
    <%= form_with(model: kanban, class: "contents", method: :patch) do |form| %>
      <div class="">
        <% if kanban.errors.any? %>
          <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
            <h2><%= pluralize(kanban.errors.count, "error") %>
              prohibited this
              kanban
              from being saved:
            </h2>
            <ul>
              <% kanban.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="my-5">
          <%= form.label :name, class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
          <%= form.text_field :name, class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
        </div>
        <div class="my-5">
          <%= form.label :description, class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
          <%= form.text_area :description, size: "30x10", class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
        </div>
        <div class="inline">
          <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>