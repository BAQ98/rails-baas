<%= form_with model: @card do |form| %>
  <div class="relative w-full">
    <!-- Modal content -->
    <div class="relative">
      <!-- Modal header -->
      <div class="flex items-center justify-between border-b pb-3 rounded-t dark:border-gray-600 mb-5">
        <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
          Create New Task
        </h3>
      </div>
      <!-- Modal body -->
      <form class="p-4 md:p-5">
        <div class="grid gap-4 mb-4 grid-cols-2">
          <div class="col-span-2">
            <%= form.label "Task name", for: :title, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= form.text_field :title, placeholder: "Type task title", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500", require: true %>
          </div>
          <div class="col-span-2">
            <%= form.label "Content", for: :content, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= form.text_area :content, size: "70x4", resize: false, placeholder: "Type task title", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500", require: true %>
          </div>
          <%= form.number_field :kanban_column_id, value: @kanban.id, hidden: true %>
          <%#= form.number_field :position, value: @cards.last.position + 2, hidden: true %>
          <%= form.submit "Create Task", class: "text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2.5 cursor-pointer focus:outline-none" %>
        </div>
      </form>
    </div>
  </div>
<% end %>